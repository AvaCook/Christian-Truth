
---
const { title, description } = Astro.props;
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>

  <body>
    <header class="site-header">
      <nav class="nav-bar">
        <a href="/" class="nav-home">Christianity is True</a>

        <div class="nav-links">
          <a href="/bibliography">Bibliography</a>
          <a href="/websites">Relevant Websites</a>
        </div>
      </nav>
    </header>

    <main>

      {description && (
        <p class="subtitle">{description}</p>
      )}

      <article class="page-content">
        <slot />
      </article>
    </main>

    <footer class="site-footer">
    <p>
      Compiled by Dr. James Latten, December 2023-present
    </p>
    <p>
        Website developed by Ava Cook, January 2026
    </p>
  </footer>
  </body>
</html>
